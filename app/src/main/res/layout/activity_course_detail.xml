<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/detail_view_padding"
    tools:context=".ui.CourseDetail">

    <TextView
        android:id="@+id/course_detail_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_start_label"
        app:layout_constraintEnd_toStartOf="@+id/course_detail_title"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/course_detail_start_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_end_label"
        app:layout_constraintEnd_toStartOf="@+id/course_detail_start"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_title_label" />

    <TextView
        android:id="@+id/course_detail_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_status_label"
        app:layout_constraintEnd_toStartOf="@+id/course_detail_end"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_start_label" />

    <TextView
        android:id="@+id/course_detail_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_instructor_label"
        app:layout_constraintEnd_toStartOf="@+id/course_detail_status"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_end_label" />

    <TextView
        android:id="@+id/course_detail_instructor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_phone_label"
        app:layout_constraintEnd_toStartOf="@+id/course_detail_instructor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_status_label" />

    <TextView
        android:id="@+id/course_detail_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_email_label"
        app:layout_constraintEnd_toStartOf="@+id/course_detail_phone"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_instructor_label" />

    <TextView
        android:id="@+id/course_detail_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_note_label"
        app:layout_constraintEnd_toStartOf="@+id/course_detail_email"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_phone_label" />

    <TextView
        android:id="@+id/course_detail_note_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/course_detail_note"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_email_label" />

    <TextView
        android:id="@+id/course_detail_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_instructor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/course_detail_status_label"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_end" />

    <TextView
        android:id="@+id/course_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/course_detail_title_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/course_detail_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/course_detail_start_label"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_title" />

    <TextView
        android:id="@+id/course_detail_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/course_detail_end_label"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_start" />

    <TextView
        android:id="@+id/course_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/course_detail_phone_label"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_instructor" />

    <TextView
        android:id="@+id/course_detail_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/course_detail_email_label"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_phone" />

    <TextView
        android:id="@+id/course_detail_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/course_detail_note_label"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_email" />

    <TextView
        android:id="@+id/course_detail_instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detailed_margin"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/course_detail_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/course_detail_instructor_label"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_status" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/course_detail_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/recycler_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toggle_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/toggle_recycler_view_description"
        android:onClick="onToggleRecyclerView"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_view" />

</androidx.constraintlayout.widget.ConstraintLayout>